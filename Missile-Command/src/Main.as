package {		import flash.events.MouseEvent;	import flash.ui.Mouse;	import flash.display.MovieClip;	import flash.display.Sprite;	import flash.events.Event;		[SWF(width="1024", height="640", backgroundColor="#003399", frameRate="60")]	public class Main extends Sprite{				private var _game:Game;		private var _menu:Menu;		private var cursor:MovieClip;				private var _soundMaster:SoundManager = new SoundManager();		public function Main() {			if (stage) init();			else addEventListener(Event.ADDED_TO_STAGE, init);		}				public function init():void		{			removeEventListener(Event.ADDED_TO_STAGE, init);							_menu	=	new Menu();			addChild(_menu);						_menu.addEventListener(Menu.START, StartGame);						cursor = new CursorArt();			addChild(cursor);			cursor.mouseEnabled = false;			cursor.mouseChildren = false;			cursor.visible = false;						Mouse.hide();						stage.addEventListener(MouseEvent.MOUSE_MOVE, cursorUpdate);			stage.addEventListener(MouseEvent.MOUSE_DOWN, cursorClick);			stage.addEventListener(MouseEvent.MOUSE_UP, cursorClickUp);		}				private function cursorUpdate(e:MouseEvent):void		{			cursor.visible = true;			cursor.x = e.stageX;			cursor.y = e.stageY;			cursor.gotoAndStop(1);		}		private function cursorClick(e:MouseEvent):void		{			cursor.gotoAndStop(2);		}		private function cursorClickUp(e:MouseEvent):void		{			cursor.gotoAndStop(1);		}				public function StartGame(e:Event):void {			removeChild(_menu);			_game = new Game;			addChild(_game);						_soundMaster.playSound(_soundMaster.gameMusic, true);		}	}}