package  {	import flash.display.MovieClip;	import flash.display.Sprite;		public class Rocket extends Sprite 	{		protected var _asset:MovieClip;				protected var stepX:Number;		protected var stepY:Number;				public var speed:Number;		public function Rocket() 		{			super();		}				public function setDir(angle:Number):void		{			this.rotation = angle + 90;			var radian:Number = angle * Math.PI / 180;			stepX = Math.cos( radian ) * speed;			stepY = Math.sin( radian ) * speed;		}				public function update():void		{			this.x	+=	stepX;			this.y	+=	stepY;		}	}	}